  </div>

  <div class="field">
    <%= form.label :winmethod %>
    <%= form.text_field :winmethod %>
  </div>

  <div class="field">
    <%= form.label :playercount %>
    <%= form.number_field :playercount %>
  </div>

  <div class="field">
    <%= form.label :players %>
    <%= form.text_area :players %>
  </div>

  <div class="field">
    <%= form.label :turns %>
    <%= form.text_area :turns %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
